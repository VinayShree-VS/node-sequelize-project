<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <style>
       .fixed_header {
            width: 100%;
            table-layout: fixed;
            border-collapse: collapse;
        }

        .fixed_header tbody {
            overflow: auto;
            height: 80vh;
            width: 100%;
            display: flex;
            flex-direction: column;
        }

        .fixed_header thead tr,
        .fixed_header tbody tr {
            width: 100%;
            display: flex;
            flex-direction: row;
            justify-content: space-evenly;
        }

        .fixed_header thead {
            background: black;
            color: #fff;
        }

        .fixed_header th,
        .fixed_header td {
            padding: 5px;
            text-align: left;
            width: 20%;
        }

        .fixed_header th:last-child {
            padding-right: 11px;
        }

        /* scrollbar */

        tbody::-webkit-scrollbar {
            width: 6px;
        }

        tbody::-webkit-scrollbar-track {
            background: rgb(68, 68, 68);
        }

        tbody::-webkit-scrollbar-thumb {
            background-color: rgb(68, 68, 68);
            border-radius: 20px;
            border: 0;
        }

    </style>
</head>
<body>
    <h1 class="title">Hey From Server</h1>

        <table class="fixed_header">
            <thead>
                <tr>
                    <th>Sr.</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Gender</th>
                    <th>Email</th>
                    <th>Job Title</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach((a,i) => { %>
                    <tr>
                        <td><%=i+1%></td>
                        <td><%=a.firstName%></td>
                        <td><%=a.lastName%></td>
                        <td><%=a.gender%></td>
                        <td><%=a.email%></td>
                        <td><%=a.jobTitle%></td>
                    </tr>
                <% }) %>
            </tbody>
          </table>
</body>
</html>